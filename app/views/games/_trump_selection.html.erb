
<h4>Trump Selection</h4>

<div class="center_card">
  <%= @game.unicode_suit(@game_state.trump_state.selection_suit) %>
</div>

<div style="margin: 0 auto 0 auto; display: table">
  <a href="<%= accept_trump_operation_url %>">
    <button type="button" >Accept</button>
  </a>
  <a href="<%= pass_trump_operation_url %>">
    <button type="button" >Pass</button>
  </a>
</div>

<h5>Hand</h5>

<div style="width: 350px; margin: 0 auto 0 auto">
  <%= render partial: 'games/table/hand',
    locals: { player: @game_state.main_player, read_only: true } %>
</div>
