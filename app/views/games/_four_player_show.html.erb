
<div class="hand opposite_hand">
  <%@game_state.players[2].hand.each do |card| %>
    <span class="hand_card"
          >
    <%= Card::UNICODE_CARDS[:back].first %>
    </span>
  <%end%>
</div>

<div class="hand left_hand">
    <%@game_state.players[1].hand.each do |card| %>
      <span class="hand_card"><%= Card::UNICODE_CARDS[:back].first%></span>
    <%end%>
</div>

<div class="hand right_hand">
  <%@game_state.players[3].hand.each do |card| %>
    <span class="hand_card"><%= Card::UNICODE_CARDS[:back].first%></span>
  <%end%>
</div>

<%= render partial: "card_pile_show" %>

<div class="hand own_hand">
  <%@game_state.players[0].hand.each do |card| %>
    <span class="hand_card"
    onclick="<%= card_onclick_handler(card) %>" id="<%= card_html_id(card) %>">
      <%= card.to_s%></span>
  <%end%>
</div>
