<div class="player_space">
  <% hidden = defined?(hidden) ? hidden : false %>

  <%= render partial: 'games/table/hand',
      locals: {  player: player, hidden: hidden } %>
  <div class="won_cards">
    <% player.scored_cards.each do |card| %>
    <%= unicode_card(card) %>
    <% end %>
  </div>
  <div class="player_name"><%= player.name %></div>
</div>
