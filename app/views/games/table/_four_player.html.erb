<table>
  <tr>
    <td>
    </td>
    <td>
      <div class="game">
        <div class="opposite_player_space">
          <%= render partial: 'games/table/player',
            locals: { player: @game_state.ai_players[1], face_up: false } %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="left_player_space">
          <%= render partial: 'games/table/player',
            locals: { player: @game_state.ai_players[0], face_up: false } %>
        </div>
      </td>
      <td>
        <%= render partial: "games/table/pile" %>
      </td>
      <td>
        <div class="right_player_space">
          <%= render partial: 'games/table/player',
            locals: { player: @game_state.ai_players[2], face_up: false } %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
      </td>
      <td>
        <div class="own_player_space">
          <%= render partial: 'games/table/player',
            locals: { player: @game_state.main_player, face_up: true } %>
        </div>
      </div>
    </td>
  </tr>
</table>
